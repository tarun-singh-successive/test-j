@model TestApplication.Entities.MemberAccount
@using TestApplication.Helpers
<style>
    .view-form .control-label {
        padding-top: 0px !important;
        text-align: left !important;
    }

    .view-form {
        border-bottom: 1px solid #2a31420a;
        margin-right: 0px !important;
        margin-left: 0px !important;
    }
</style>
<div>
    <hr />
    <div class="form-horizontal">

        <div class="form-group view-form">
            @Html.LabelFor(m => m.Member.Name, new { @class = "col-md-3 col-md-offset-1 control-label" })
            <div class="col-md-8">
                @Html.DisplayFor(m => m.Member.Name)
            </div>
        </div>

        <div class="form-group view-form">
            @Html.LabelFor(m => m.Member.Mobile, new { @class = "col-md-3 col-md-offset-1 control-label" })
            <div class="col-md-8">
                @Html.DisplayFor(m => m.Member.Mobile)
            </div>
        </div>
        <div class="form-group view-form">
            @Html.LabelFor(m => m.Scheme.Name, new { @class = "col-md-3 col-md-offset-1 control-label" })
            <div class="col-md-8">
                @Html.DisplayFor(m => m.Scheme.Name)
            </div>
        </div>
        <div class="form-group view-form">
            @Html.LabelFor(m => m.CreationDate, new { @class = "col-md-3 col-md-offset-1 control-label" })
            <div class="col-md-8">
                @Html.DisplayFor(m => m.CreationDate)
            </div>
        </div>
        <div class="form-group view-form">
            @Html.LabelFor(m => m.ClosingDate, new { @class = "col-md-3 col-md-offset-1 control-label" })
            <div class="col-md-8">
                @Html.DisplayFor(m => m.ClosingDateText)
            </div>
        </div>
        <div class="form-group view-form">
            @Html.LabelFor(m => m.StatusId, new { @class = "col-md-3 col-md-offset-1 control-label" })
            <div class="col-md-8">
                @Html.DisplayFor(m => m.StatusText)
            </div>
        </div>
        <div class="form-group view-form">
            @Html.LabelFor(m => m.TotalBalance, new { @class = "col-md-3 col-md-offset-1 control-label" })
            <div class="col-md-8">
                @Html.DisplayFor(m => m.TotalBalance)
            </div>
        </div>
    </div>
</div>
