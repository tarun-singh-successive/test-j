@model TestApplication.Entities.MemberAccount
@using TestApplication.Models
@Html.HiddenFor(x=>x.Id)
@Html.HiddenFor(x=>x.AccountTypeId)
@Html.HiddenFor(x=>x.CreationDate)
<div class="form-group">
    @Html.LabelFor(model => model.MemberId, new { @class = "control-label col-md-2" })
    <div class="col-md-8">
        @Html.DropDownListFor(model => model.MemberId, MemberModel.GetMembers(), "Select Member", new { @class = "form-control select2", required = "required" })
        @Html.ValidationMessageFor(model => model.MemberId, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.BranchId, new { @class = "control-label col-md-2" })
